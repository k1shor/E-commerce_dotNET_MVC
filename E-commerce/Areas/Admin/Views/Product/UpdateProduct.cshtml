@model Product

<h1>Update Product</h1>
<form method="post" class="w-50 m-5 p-5 shadow-lg">
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="createdAt"/>
    <label asp-for="Title"></label>
    <div class="d-flex">
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title"></span>
    </div>

    <label asp-for="Price"></label>
    <div class="d-flex">
        <input type="number" asp-for="Price" class="form-control" />
        <span asp-validation-for="Price"></span>

    </div>

    <label asp-for="Description"></label>
    <div class="d-flex">
        <textarea asp-for="Description" class="form-control" style="resize:none;"></textarea>
        <span asp-validation-for="Description"></span>

    </div>

    <label asp-for="Count_In_Stock"></label>
    <div class="d-flex">
        <input type="number" asp-for="Count_In_Stock" class="form-control" />
        <span asp-validation-for="Count_In_Stock"></span>

    </div>

    <label asp-for="Rating"></label>
    <div class="d-flex">
        <input type="number" asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating"></span>

    </div>
    
    <div class="btn-group w-100">
        <button class="btn btn-warning">Update</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-danger">Back</a>
    </div>
</form>
